<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/loading"
        layout="@layout/layout_loading"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="@dimen/padding"
            android:paddingTop="@dimen/padding"
            android:paddingEnd="@dimen/padding"
            android:paddingBottom="@dimen/padding_bottom_fragment"
            tools:context=".activities.SignUpActivity">

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Name"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_label"
                android:enabled="false"
                android:hint="Full Name"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="Pawan Singh Harariya" />

            <TextView
                android:id="@+id/mobile_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_text"
                android:layout_marginTop="12dp"
                android:text="Contact Number"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/mobile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile_label"
                android:enabled="false"
                android:hint="Mobile Number"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="9876543210" />

            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile_text"
                android:layout_marginTop="12dp"
                android:text="Email"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_label"
                android:enabled="false"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="pawan@gmail.com" />

            <TextView
                android:id="@+id/address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_text"
                android:layout_marginTop="12dp"
                android:text="Address"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_label"
                android:enabled="false"
                android:hint="Address"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="Haldwani, Uttrakhand" />

            <TextView
                android:id="@+id/landmark_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_text"
                android:layout_marginTop="12dp"
                android:text="Landmark"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/landmark_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/landmark_label"
                android:enabled="false"
                android:hint="Landmark"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="Block" />

            <TextView
                android:id="@+id/pincode_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/landmark_text"
                android:layout_marginTop="12dp"
                android:text="Pincode"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/pincode_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pincode_label"
                android:enabled="false"
                android:hint="Pincode"
                android:inputType="number"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="263139" />

            <TextView
                android:id="@+id/gst_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pincode_text"
                android:layout_marginTop="12dp"
                android:text="GST Number"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/gst_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gst_label"
                android:enabled="false"
                android:hint="GST Number"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="A8920789778H110" />

            <TextView
                android:id="@+id/pan_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gst_text"
                android:layout_marginTop="12dp"
                android:text="PAN Number"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/pan_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pan_label"
                android:enabled="false"
                android:hint="PAN Number"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="ABH07891J" />

            <TextView
                android:id="@+id/pick_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pan_text"
                android:layout_marginTop="12dp"
                android:text="Pickup Address"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/pick_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pick_label"
                android:enabled="false"
                android:hint="Pickup Address"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="Pickup address, Haldwani" />

            <TextView
                android:id="@+id/return_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pick_address_text"
                android:layout_marginTop="12dp"
                android:text="Return Address"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/return_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/return_label"
                android:enabled="false"
                android:hint="Return Address"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                tools:text="Return Address, Haldwani" />

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@id/return_address_text"
                android:layout_marginTop="32dp"
                android:text="Edit Profile"
                android:textSize="@dimen/button_text_size" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>